[colors]
background = #e616161C
background-alt = #e638361C
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

peko-dark = #7eaff5
peko-light = #afcfff
peko-dark-alt = #e67eaff5
peko-light-alt = #e6afcfff

miko-dark = #fb788b
miko-light = #ff8fc4
miko-dark-alt = #e6fb788b
miko-light-alt = #e6ff8fc4

[bar/peko-miko]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
