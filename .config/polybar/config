[module/spotify]
type = custom/script
tail = true
format-prefix = "Now Playing: "
format = <label>
exec = ~/.config/polybar/extra/scroll_spotify_status.sh

[module/emacs]
type = custom/text

content-prefix = %{T4}
content = %{T-}Emacs

content-foreground = ${colors.peko-light}

content-prefix-padding-right = 1
content-margin = 1

click-left = emacs

[module/firefox]
type = custom/text

content-prefix = %{T4}
content = %{T-}Firefox

content-foreground = ${colors.miko-light}

